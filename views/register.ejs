<%- include("./partials/headerlr") %>
<link href="https://fonts.googleapis.com/css2?family=Pacifico&display=swap" rel="stylesheet">
<style>
    input,
    button {
        padding: 10px;
        margin: 20px;
        width: 400px;
        border-radius: 10px;
        text-align: center;
        border: 1px solid black;
    }

    button {
        background-color: rgb(61, 21, 6);
        color: white;
    }

    .container {
        width: 500px;
        border: 5px solid white;
        padding: 20px;
        border-radius: 20px;
        margin-left: 20%;
        box-shadow: 10px 10px 10px 10px black;
    }

    body {
        background-image: url('https://lh3.googleusercontent.com/proxy/DCsKMZeEKEo-_tYPqRiOOF0FpTv6EMwnn0ooNZc2y9YEJ1uMQtjs_G8RoTla-5F5XGx8WhQDKJSNPHiQDBN4iyjta3ymlqHXKSCaP44q7Eo');
        opacity: 0.7;
        background-size: cover;
        background-repeat: no-repeat;
        font-family: 'Pacifico', cursive;
        font-size: 20px;

    }


    h3 {
        text-align: center;
        font-size: 50px;
        color: rgb(255, 222, 92);
        text-shadow: 3px 3px black;
        margin-bottom: 10px;
    }
</style>
<div class="container" style="margin-left: 30%; margin-top: 6%;">
    <form action="/register" method="POST" class="form form-group">
        <h3>Register</h3>
        <input type="text" placeholder="username" name="username" required><br>
        <input type="password" placeholder="password" name="password" required><br>
        <button type="submit" style="border-radius: 10px;">Submit</button>
    </form>
</div>
